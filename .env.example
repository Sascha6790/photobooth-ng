# Photobooth Environment Configuration
# Copy this file to .env and adjust values for your environment

# Environment
NODE_ENV=production
PORT=3000
FRONTEND_PORT=80
FRONTEND_SSL_PORT=443

# Database Configuration (PostgreSQL for Docker, SQLite for local dev)
DATABASE_TYPE=postgres
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=photobooth
DATABASE_USER=photobooth
DATABASE_PASSWORD=change_this_password_in_production
DATABASE_PATH=data/photobooth.db  # For SQLite (development only)

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change_this_redis_password_in_production

# JWT Configuration
JWT_SECRET=change_this_jwt_secret_in_production
JWT_EXPIRATION=7d

# File Paths
DATA_DIR=data
IMAGES_DIR=data/images
THUMBS_DIR=data/thumbs
TMP_DIR=data/tmp
QR_DIR=data/qrcodes
FRAMES_DIR=resources/img/frames
BACKGROUNDS_DIR=resources/img/background

# Camera Configuration
# Options: mock, gphoto2, webcam, raspistill
CAMERA_MODE=mock
CAMERA_TYPE=gphoto2

# Print Configuration
PRINT_ENABLED=false
PRINTER_NAME=

# Mail Configuration
MAIL_ENABLED=false
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=
MAIL_PASSWORD=

# GPIO Configuration (Raspberry Pi only)
GPIO_ENABLED=false
GPIO_BUZZER_PIN=17
GPIO_PRINT_PIN=22
GPIO_COLLAGE_PIN=27
HARDWARE_MOCK=true

# Remote Storage
REMOTE_STORAGE_ENABLED=false
REMOTE_STORAGE_TYPE=ftp
REMOTE_STORAGE_HOST=
REMOTE_STORAGE_USER=
REMOTE_STORAGE_PASSWORD=
REMOTE_STORAGE_PATH=/

# Language
DEFAULT_LANGUAGE=en

# Admin Configuration
ADMIN_PASSWORD=
ADMIN_PIN=
ADMINER_PORT=8080

# Docker Registry (optional)
# DOCKER_REGISTRY=ghcr.io/your-username
# VERSION=latest

# Backup Configuration
BACKUP_KEEP_DAYS=7
DATA_PATH=./data

# Logging
DEBUG=false
LOG_LEVEL=info
LOG_FORMAT=json

# Security
CORS_ORIGIN=http://localhost
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# NGINX Configuration
NGINX_HOST=localhost
