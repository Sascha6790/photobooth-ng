# Production Environment Configuration
# Copy this file to .env.production and configure with your values

# Application
NODE_ENV=production
PORT=3000

# Security
REQUIRE_HTTPS=true
FORCE_HTTPS=false
ALLOWED_ORIGINS=https://photobooth.local,https://your-domain.com

# SSL/TLS Configuration
USE_LETSENCRYPT=true
DOMAIN=photobooth.local
SSL_PATH=/etc/ssl/photobooth
SSL_KEY_PATH=/etc/ssl/photobooth/server.key
SSL_CERT_PATH=/etc/ssl/photobooth/server.crt
SSL_CA_PATH=/etc/ssl/photobooth/ca.crt
SSL_PASSPHRASE=

# Database
DATABASE_TYPE=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=photobooth
DATABASE_PASSWORD=your-secure-password
DATABASE_NAME=photobooth_prod
DATABASE_SSL=true
DATABASE_SYNCHRONIZE=false
DATABASE_LOGGING=error

# Redis (for sessions and cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_TLS=true

# Session
SESSION_SECRET=your-very-long-random-session-secret-here
SESSION_NAME=photobooth.sid
SESSION_MAX_AGE=86400000
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# JWT
JWT_SECRET=your-very-long-random-jwt-secret-here
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=your-very-long-random-refresh-secret-here
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=52428800
UPLOAD_DIRECTORY=/var/lib/photobooth/uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM=Photobooth <noreply@photobooth.local>

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=/var/log/photobooth/app.log
LOG_MAX_FILES=14
LOG_MAX_SIZE=20m

# Hardware (Raspberry Pi)
HARDWARE_ENABLED=true
GPIO_ENABLED=true
CAMERA_TYPE=gphoto2
PRINTER_ENABLED=true

# Backup
BACKUP_ENABLED=true
BACKUP_DIRECTORY=/var/backups/photobooth
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Performance
ENABLE_CLUSTERING=true
WORKER_PROCESSES=auto
ENABLE_CACHE=true
CACHE_TTL=3600

# API Keys (if needed)
GOOGLE_PHOTOS_API_KEY=
DROPBOX_API_KEY=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
AWS_S3_BUCKET=