# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=localhost

# GPIO Configuration
GPIO_MOCK=true

# GPIO Button Pins (BCM numbering on Raspberry Pi)
GPIO_BUTTON_CAPTURE_PIN=17
GPIO_BUTTON_PRINT_PIN=22
GPIO_BUTTON_GALLERY_PIN=23
GPIO_BUTTON_DELETE_PIN=24
GPIO_BUTTON_MODE_PIN=25

# GPIO LED Pins (BCM numbering on Raspberry Pi)
GPIO_LED_STATUS_PIN=27
GPIO_LED_FLASH_PIN=4
GPIO_LED_SUCCESS_PIN=5
GPIO_LED_ERROR_PIN=6
GPIO_LED_PRINT_PIN=12
GPIO_LED_RECORDING_PIN=13

# Camera Configuration
# Options: mock, webcam, gphoto2
CAMERA_STRATEGY=mock

# Webcam device (Linux: /dev/video0, macOS: 0, Windows: video="USB Camera")
CAMERA_DEVICE=/dev/video0

# Output paths
CAMERA_OUTPUT_PATH=/tmp/photobooth/captures
CAMERA_THUMBNAIL_PATH=/tmp/photobooth/captures/thumbnails

# Camera connection settings
CAMERA_AUTO_CONNECT=true
CAMERA_RECONNECT_ATTEMPTS=3
CAMERA_RECONNECT_DELAY=5000

# Default camera settings
CAMERA_DEFAULT_ISO=200
CAMERA_DEFAULT_APERTURE=f/5.6
CAMERA_DEFAULT_SHUTTER=1/125
CAMERA_DEFAULT_WB=auto
CAMERA_DEFAULT_FOCUS=auto
CAMERA_DEFAULT_FORMAT=jpeg
CAMERA_DEFAULT_QUALITY=fine

# Database Configuration (optional)
DATABASE_TYPE=sqlite
DATABASE_PATH=./data/photobooth.db

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/photobooth.log

# CORS Configuration
CORS_ORIGIN=http://localhost:4200

# Session Configuration
SESSION_SECRET=your-secret-key-here
SESSION_MAX_AGE=86400000

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,video/mp4

# Print Service (optional)
PRINTER_NAME=default
PRINTER_COPIES=1
PRINTER_PAPER_SIZE=4x6

# Email Service (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Remote Storage (optional)
FTP_HOST=ftp.example.com
FTP_PORT=21
FTP_USER=username
FTP_PASS=password
FTP_PATH=/photobooth

# Feature Flags
FEATURE_PRINT=true
FEATURE_EMAIL=true
FEATURE_GALLERY=true
FEATURE_EFFECTS=true
FEATURE_CHROMAKEY=true
FEATURE_COLLAGE=true
FEATURE_VIDEO=true
FEATURE_QR_CODE=true