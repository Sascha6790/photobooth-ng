# Monitoring Configuration

# Sentry Configuration
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Logging Configuration
LOG_LEVEL=debug
LOG_DIR=logs
LOG_MAX_FILES=14d
LOG_MAX_SIZE=20m

# Prometheus Metrics
METRICS_ENABLED=true
METRICS_PATH=/metrics
METRICS_PORT=9090

# Health Check Configuration
HEALTH_CHECK_DATABASE_TIMEOUT=3000
HEALTH_CHECK_DISK_THRESHOLD=0.9
HEALTH_CHECK_MEMORY_HEAP_THRESHOLD=150
HEALTH_CHECK_MEMORY_RSS_THRESHOLD=300

# Performance Monitoring
PERFORMANCE_SLOW_REQUEST_THRESHOLD=3000
PERFORMANCE_TRACKING_ENABLED=true

# Alert Configuration
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_TO=admin@example.com
ALERT_SLACK_ENABLED=false
ALERT_SLACK_WEBHOOK_URL=your-slack-webhook-url